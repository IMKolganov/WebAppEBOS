@page "/Customers/Home"
@model WebAppEBOS.Pages.Cakes.IndexModel

@{
    ViewBag.Title = "Manage Customers";
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 offset-md-4">
        </div>
    </div>
    <div class="row">
        @foreach (var item in Model.AllCustomers)
        {
            <div class="col-md-3 m-3">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.Path $</h6>
                        <p class="card-text">@item.Path</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
